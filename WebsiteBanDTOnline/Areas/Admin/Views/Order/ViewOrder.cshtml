@model WebsiteBanDTOnline.Models.EF.Order
@using PagedList;
@{
    ViewBag.Title = "Chi tiết đơn hàng";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
        </li>

    </ul>
}
@section body{
    <section class="content">
        <div class="card-header">
            <h3 class="card-title">Chi tiết đơn hàng</h3>


        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label>Mã đơn hàng</label>
                    <p class="form-control">@Model.Code</p>
                </div>
                <div class="col-md-6">
                    <label>Tên khách hàng</label>
                    <p class="form-control">@Model.CustomerName</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Tổng tiền</label>
                    <p class="form-control">@WebsiteBanDTOnline.Common.Common.FormatNumber(Model.TotalAmount, 0) đ</p>
                </div>
                <div class="col-md-6">
                    <label>Số điện thoại</label>
                    <p class="form-control">@Model.Phone</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Ngày tạo</label>
                    <p class="form-control">@Model.CreatedDate.ToString()</p>
                </div>
                <div class="col-md-6">
                    <label>Email</label>
                    <p class="form-control">@Model.CustomerName</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Trạng thái</label>
                    <p class="form-control">@(Model.TypePayment == 1?"Chưa thanh toán":"Đã thanh toán")</p>
                </div>
                <div class="col-md-6">
                    <label>Email</label>
                    <p class="form-control">@Model.Email</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h2>Danh sách sản phẩm</h2>
                </div>
                <div class="col-12">
                    @Html.Action("Partial_SanPham", "Order", new { @id = Model.Id })
                </div>
            </div>
        </div>
        <div class="card-footer">

        </div>
    </section>
}




