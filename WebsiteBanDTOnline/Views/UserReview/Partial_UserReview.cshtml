@model WebsiteBanDTOnline.Models.UserReviewViewModel
@using (Ajax.BeginForm("SubmitUserReview", "UserReview", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "load_data",
    OnComplete = "OnSuccessCO",
    OnFailure = "OnFailure"
}, new { @Id = "myForm" }))
{
    @Html.AntiForgeryToken()
<div class="add_review">
    <h3 class="col-lg-12">Đánh giá sản phẩm</h3>
    <div class="form-group col-lg-12">
        <label>Họ tên</label>
        <input type="text" name="Name" required class="form-control" autocomplete="off" style="color:#162938 ;" />
    </div>
    <div class="form-group col-lg-12">
        <label>Email</label>
        <input type="text" name="Email" class="form-control" autocomplete="off" style="color:#162938 ;" />
    </div>
    <div class="form-group col-lg-12">
        <label>Đánh giá của bạn</label>

        <div class="form-check">
            @Html.CheckBoxFor(x => x.Is1Star, new { @class = "form-check-input" })
            <label class="form-check-label" for="inlineCheckbox1">Rất tệ</label>
        </div>
        <div class="form-check">
            @Html.CheckBoxFor(x => x.Is2Star, new { @class = "form-check-input" })
            <label class="form-check-label" for="inlineCheckbox2">Tệ</label>
        </div>
        <div class="form-check">
            @Html.CheckBoxFor(x => x.Is3Star, new { @class = "form-check-input" })
            <label class="form-check-label" for="inlineCheckbox1">Bình thường</label>
        </div>
        <div class="form-check">
            @Html.CheckBoxFor(x => x.Is4Star, new { @class = "form-check-input" })
            <label class="form-check-label" for="inlineCheckbox2">Tốt</label>
        </div>
        <div class="form-check ">
            @Html.CheckBoxFor(x => x.Is5Star, new { @class = "form-check-input" })
            <label class="form-check-label" for="inlineCheckbox1">Rất tốt</label>
        </div>
        <div class="form-group">
            <label>Nhận xét</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Comment" placeholder="Xin mời chia sẻ một số cảm nhận về sản phẩm"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-success" style="width: 55%;">Gửi đánh giá</button>
        </div>
    </div>
</div>
 }
