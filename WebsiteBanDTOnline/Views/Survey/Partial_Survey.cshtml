@model WebsiteBanDTOnline.Models.SurveyViewModel
@using (Ajax.BeginForm("SubmitSurvey", "Survey", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "load_data",
    OnComplete = "OnSuccessCO",
    OnFailure = "OnFailure"
}, new { @Id = "myForm" }))
{
    @Html.AntiForgeryToken()
    <h3>Thông tin khảo sát</h3>
    <div class="form-group">
        <label>Họ tên</label>
        <input type="text" name="CustomerName" required class="form-control" autocomplete="off" style="color:#162938 ;" />
    </div>
    <div class="form-group">
        <label>Tuổi</label>
        <input type="text" name="Age" class="form-control" autocomplete="off" style="color:#162938 ;" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" name="Email" class="form-control" autocomplete="off" style="color:#162938 ;" />
    </div>
    <div class="form-group">
        <label>Bạn có giới thiệu cửa hàng cho những người mà bạn biết ?</label>
        <div class="form-check form-check-inline">
            @Html.CheckBoxFor(x => x.IsRecommended, new { @class = "form-check-input" })
            <label class="form-check-label" for="IsRecommended">Có</label>
        </div>
        <div class="form-check form-check-inline">
            @Html.CheckBoxFor(x => x.IsNotRecommended, new {@class = "form-check-input"})
            <label class="form-check-label" for="IsNotRecommended">Không</label>
        </div>
    </div>

    <div class="form-group">
        <label>Đánh giá của bạn</label>
        <div class="form-check ">
            @Html.CheckBoxFor(x => x.Is1Star, new { @class = "form-check-input" })
            <label class="form-check-label" for="inlineCheckbox1">1</label>
        </div>
        <div class="form-check">
            @Html.CheckBoxFor(x => x.Is2Star, new { @class = "form-check-input" })
            <label class="form-check-label" for="inlineCheckbox2">2</label>
        </div>
        <div class="form-check ">
            @Html.CheckBoxFor(x => x.Is3Star, new { @class = "form-check-input" })
            <label class="form-check-label" for="inlineCheckbox1">3</label>
        </div>
        <div class="form-check">
            @Html.CheckBoxFor(x => x.Is4Star, new { @class = "form-check-input" })
            <label class="form-check-label" for="inlineCheckbox2">4</label>
        </div>
        <div class="form-check ">
            @Html.CheckBoxFor(x => x.Is5Star, new { @class = "form-check-input" })
            <label class="form-check-label" for="inlineCheckbox1">5</label>
        </div>
        <div class="form-group">
            <label>Nhận xét</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Comment"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-success" style="width: 77%; ">Gửi</button>
        </div>
    </div>
    
}
