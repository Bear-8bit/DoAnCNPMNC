@model IEnumerable<WebsiteBanDTOnline.Models.EF.News>
@if (Model != null && Model.Any())
{
    <div class="blogs">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title">
                        <h2>Tin công nghệ</h2>
                    </div>
                </div>
            </div>
            <div class="row blogs_container">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 blog_item_col">
                        <div class="blog_item">
                            <div class="blog_background rounded-2" style="background-image: url(@item.Image)"></div>
                            <div class="blog_content rounded-2 d-flex flex-column align-items-center justify-content-center text-center">
                                <h4 class="blog_title">@item.Title</h4>
                                <span class="blog_meta">by @item.CreatedBy | @item.CreatedDate</span>
                                <a class="blog_more" href="/@item.Alias-n@(item.Id)">Đọc thêm</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

