@model IEnumerable<WebsiteBanDTOnline.Models.EF.Promotions>
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/styles/main_styles.css">
<link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
<style>
    .news_section_container {
        margin-top: 120px;
        width: 75%;
    }


    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 40px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>

<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12 ">
            <h1 class="title-news">Chương trình khuyến mãi</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row row-item-new">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="" title="@item.Title"><img src="@item.Image" alt="@item.Title" style="border: 1px solid #fff; border-radius: 15px;" /></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">
                        <h3><a href="/@item.Alias-n@(item.Id)" style="color: #162938;">@item.Title</a></h3>
                        <div class="description-box">
                            @item.Description
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

