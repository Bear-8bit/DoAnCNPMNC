@model IEnumerable<WebsiteBanDTOnline.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
    <!-- Banner -->
<ul class="sidebar_categories">
    @foreach (var item in Model)
    {
        if (ViewBag.ProductCate_Id == item.Id)
        {
            <li class="active"><a href="/danh-muc-san-pham/@item.Alias-@(item.Id)"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Name</a></li>
        }
        else
        {
            <li><a href="/danh-muc-san-pham/@item.Alias-@(item.Id)">@item.Name</a></li>
        }

    }

